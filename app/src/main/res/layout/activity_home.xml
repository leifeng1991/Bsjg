<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".ui.HomeActivity">

        <ImageView
            android:id="@+id/mAppLogoImageView"
            android:layout_width="@dimen/sw_162dp"
            android:layout_height="@dimen/sw_162dp"
            android:layout_marginLeft="@dimen/sw_128dp"
            android:layout_marginTop="@dimen/sw_110dp"
            android:src="@mipmap/icon_logo"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/mCompanyNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/sw_130dp"
            android:text="柳州市炳圣建筑工程有限责任公司"
            android:textColor="#333333"
            android:textSize="@dimen/sw_90sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/mAppLogoImageView"
            app:layout_constraintLeft_toRightOf="@+id/mAppLogoImageView"
            app:layout_constraintTop_toTopOf="@+id/mAppLogoImageView" />


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/sw_930dp"
            android:layout_marginEnd="@dimen/sw_930dp"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/mMapImageView"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:src="@mipmap/home_ic1"
                app:layout_constraintDimensionRatio="790:908"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/gerenTv"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/gerenTv"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginLeft="@dimen/sw_40dp"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:src="@mipmap/home_ic2"
                app:layout_constraintDimensionRatio="790:908"
                app:layout_constraintLeft_toRightOf="@+id/mMapImageView"
                app:layout_constraintRight_toLeftOf="@+id/xitongTv"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/xitongTv"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginLeft="@dimen/sw_40dp"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:src="@mipmap/home_ic3"
                app:layout_constraintDimensionRatio="790:908"
                app:layout_constraintLeft_toRightOf="@+id/gerenTv"
                app:layout_constraintRight_toLeftOf="@+id/buluTv"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/buluTv"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginLeft="@dimen/sw_40dp"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:src="@mipmap/home_ic4"
                app:layout_constraintDimensionRatio="790:908"
                app:layout_constraintLeft_toRightOf="@+id/xitongTv"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/mBottomTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/sw_160dp"
            android:text="当前驾驶员：李易峰    车牌：桂B-WU888"
            android:textColor="#ff65b651"
            android:textSize="@dimen/sw_60sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <TextView
            android:id="@+id/mLogoutTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/sw_246dp"
            android:background="@drawable/btn_style2"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:gravity="center"
            android:paddingStart="@dimen/sw_92dp"
            android:paddingTop="@dimen/sw_20dp"
            android:paddingEnd="@dimen/sw_92dp"
            android:paddingBottom="@dimen/sw_20dp"
            android:text="退出登录"
            android:textColor="#ff65b651"
            android:textSize="@dimen/sw_60sp"
            app:layout_constraintBottom_toBottomOf="@+id/mBottomTextView"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/mBottomTextView" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>