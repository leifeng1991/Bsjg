<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:gravity="center"
        tools:context=".ui.LoginModeChoiceActivity">

        <LinearLayout
            android:id="@+id/mEwmLoginLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="@dimen/sw_556dp"
                android:layout_height="@dimen/sw_556dp"
                android:background="@drawable/bg_login_choice"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_ewm_login" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/sw_80dp"
                android:text="点击扫码登录"
                android:textColor="#ff19cc7e"
                android:textSize="@dimen/sw_60sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/mPassWordLoginLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/sw_138dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="@dimen/sw_556dp"
                android:layout_height="@dimen/sw_556dp"
                android:background="@drawable/bg_login_choice"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_password_login" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/sw_80dp"
                android:text="点击账号密码登录"
                android:textColor="#ff19cc7e"
                android:textSize="@dimen/sw_60sp" />

        </LinearLayout>

    </LinearLayout>
</layout>