<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".ui.HomeActivity">

        <com.ruffian.library.widget.RTextView
            android:id="@+id/mBackTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/sw_120dp"
            android:layout_marginTop="@dimen/sw_146dp"
            android:paddingStart="@dimen/sw_140dp"
            android:paddingTop="@dimen/sw_20dp"
            android:paddingEnd="@dimen/sw_140dp"
            android:paddingBottom="@dimen/sw_20dp"
            android:text="返回"
            android:textColor="#ff65b651"
            android:textSize="@dimen/sw_60sp"
            app:background_normal="@color/white"
            app:border_color_normal="#65B651"
            app:border_width_normal="@dimen/sw_4dp"
            app:corner_radius="@dimen/sw_10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent" />

        <ImageView
            android:id="@+id/mAppLogoImageView"
            android:layout_width="@dimen/sw_162dp"
            android:layout_height="@dimen/sw_162dp"
            android:layout_marginLeft="@dimen/sw_128dp"
            android:layout_marginTop="@dimen/sw_110dp"
            android:src="@mipmap/icon_logo"
            app:layout_constraintLeft_toRightOf="@+id/mBackTextView"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/mCompanyNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/sw_130dp"
            android:text="柳州市炳圣建筑工程有限责任公司"
            android:textColor="#333333"
            android:textSize="@dimen/sw_90sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/mAppLogoImageView"
            app:layout_constraintLeft_toRightOf="@+id/mAppLogoImageView"
            app:layout_constraintTop_toTopOf="@+id/mAppLogoImageView" />

        <com.ruffian.library.widget.RLinearLayout
            android:id="@+id/mContentLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/sw_62dp"
            android:paddingTop="@dimen/sw_42dp"
            android:paddingRight="@dimen/sw_62dp"
            android:visibility="gone"
            android:paddingBottom="@dimen/sw_174dp"
            app:border_color_normal="#65B651"
            app:border_width_normal="@dimen/sw_4dp"
            app:corner_radius="@dimen/sw_20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/mDeviceIdTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ff989898"
                android:textSize="@dimen/sw_50sp"
                tools:text="IMEI号:88888888        ID:88888" />

            <TextView
                android:id="@+id/mDeviceNumberTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/sw_160dp"
                android:gravity="center"
                android:textColor="#ff65b651"
                android:textSize="@dimen/sw_50sp"
                tools:text="本车载设备编号：1023" />

            <com.ruffian.library.widget.REditText
                android:id="@+id/mInputEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/sw_100dp"
                android:background="@color/white"
                android:gravity="center"
                android:paddingStart="@dimen/sw_150dp"
                android:paddingTop="@dimen/sw_20dp"
                android:paddingEnd="@dimen/sw_150dp"
                android:paddingBottom="@dimen/sw_20dp"
                android:textColor="#ff65b651"
                android:textColorHint="#ff65b651"
                android:textSize="@dimen/sw_40sp"
                app:background_normal="@color/white"
                app:border_color_normal="#65B651"
                app:border_width_normal="@dimen/sw_4dp"
                app:corner_radius="@dimen/sw_20dp"
                tools:text="绑定车牌：桂BWU888" />

            <com.ruffian.library.widget.RTextView
                android:id="@+id/mSureButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/sw_80dp"
                android:gravity="center"
                android:paddingTop="@dimen/sw_20dp"
                android:paddingBottom="@dimen/sw_20dp"
                android:textColor="#ffffffff"
                android:textSize="@dimen/sw_50sp"
                app:background_normal="#65B651"
                app:corner_radius="@dimen/sw_20dp"
                tools:text="解除绑定" />
        </com.ruffian.library.widget.RLinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>